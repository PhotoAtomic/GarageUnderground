@page "/admin/roles"
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@using GarageUnderground.Authentication.Client
@using GarageUnderground.Persistence
@using GarageUnderground.Models
@inject ApiAuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject IUserRegistrationRepository UserRegistrationRepository
@inject IUserRolesRepository UserRolesRepository

<PageTitle>Gestione Ruoli - GarageUnderground</PageTitle>

@if (!initialized)
{
    <div class="admin-container">
        <div class="loading">
            <span class="loading-spinner"></span>
            <span>Verifica autorizzazioni...</span>
        </div>
    </div>
}
else if (!isAuthorized)
{
    <div class="admin-container">
        <div class="access-denied">
            <h2>Accesso Negato</h2>
            <p>Non hai i permessi per accedere a questa pagina. &Egrave; richiesto il ruolo <strong>canAdmin</strong>.</p>
            <a href="/dashboard" class="btn-back">Torna alla Dashboard</a>
        </div>
    </div>
}
else
{
    <div class="admin-container">
        <header class="admin-header">
            <h1>Gestione Ruoli Utenti</h1>
            <p class="admin-description">Assegna o rimuovi ruoli agli utenti registrati</p>
        </header>

        @if (loading)
        {
            <div class="loading">
                <span class="loading-spinner"></span>
                <span>Caricamento utenti...</span>
            </div>
        }
        else if (errorMessage != null)
        {
            <div class="error-message">
                <span>@errorMessage</span>
                <button @onclick="LoadUsers">Riprova</button>
            </div>
        }
        else
        {
            <div class="users-section">
                <div class="search-box">
                    <input type="text"
                           placeholder="Cerca per email o nome..."
                           @bind="searchTerm"
                           @bind:event="oninput"
                           @onkeyup="FilterUsers" />
                </div>

                <div class="users-list">
                    @if (filteredUsers.Count == 0)
                    {
                        <div class="empty-state">
                            <p>Nessun utente trovato</p>
                        </div>
                    }
                    else
                    {
                        @foreach (var user in filteredUsers)
                        {
                            <div class="user-card @(selectedUser?.Email == user.Email ? "selected" : "")">
                                <div class="user-info" @onclick="() => SelectUser(user)">
                                    <div class="user-main">
                                        <span class="user-name">@(user.DisplayName ?? "Nome non disponibile")</span>
                                        <span class="user-email">@user.Email</span>
                                    </div>
                                    <div class="user-meta">
                                        <span class="user-provider">@user.Provider</span>
                                        <span class="user-logins" title="Numero di accessi">@user.LoginCount accessi</span>
                                    </div>
                                </div>
                                <div class="user-roles">
                                    @if (user.Roles.Length == 0)
                                    {
                                        <span class="no-roles">Nessun ruolo</span>
                                    }
                                    else
                                    {
                                        @foreach (var role in user.Roles)
                                        {
                                            <span class="role-tag">
                                                @role
                                                <button class="remove-role"
                                                        @onclick="() => RemoveRole(user.Email, role)"
                                                        @onclick:stopPropagation="true"
                                                        title="Rimuovi ruolo">
                                                    <svg class="icon-small" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                        <line x1="18" y1="6" x2="6" y2="18"/>
                                                        <line x1="6" y1="6" x2="18" y2="18"/>
                                                    </svg>
                                                </button>
                                            </span>
                                        }
                                    }
                                </div>

                                @if (selectedUser?.Email == user.Email)
                                {
                                    <div class="add-role-section">
                                        <select @bind="selectedRole">
                                            <option value="">-- Seleziona ruolo --</option>
                                            @foreach (var role in availableRoles.Where(r => !user.Roles.Contains(r.Name)))
                                            {
                                                <option value="@role.Name">@role.DisplayName</option>
                                            }
                                        </select>
                                        <button class="btn-add-role"
                                                @onclick="() => AddRole(user.Email)"
                                                disabled="@string.IsNullOrEmpty(selectedRole)">
                                            Aggiungi Ruolo
                                        </button>
                                    </div>
                                    
                                    <div class="danger-zone">
                                        <button class="btn-delete-user" @onclick="() => ShowDeleteConfirmation(user)">
                                            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <polyline points="3 6 5 6 21 6"/>
                                                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                                            </svg>
                                            Elimina Utente
                                        </button>
                                    </div>
                                }
                            </div>
                        }
                    }
                </div>
            </div>

            @if (availableRoles.Count > 0)
            {
                <div class="roles-legend">
                    <h3>Ruoli Disponibili</h3>
                    <div class="roles-list">
                        @foreach (var role in availableRoles)
                        {
                            <div class="role-info">
                                <span class="role-name">@role.Name</span>
                                <span class="role-display">@role.DisplayName</span>
                                <span class="role-description">@role.Description</span>
                            </div>
                        }
                    </div>
                </div>
            }
        }

        @if (statusMessage != null)
        {
            <div class="status-message @(isError ? "error" : "success")">
                @statusMessage
            </div>
        }
    </div>
}

@if (userToDelete != null)
{
    <div class="modal-overlay" @onclick="HideDeleteConfirmation">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <svg class="modal-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"/>
                    <line x1="12" y1="8" x2="12" y2="12"/>
                    <line x1="12" y1="16" x2="12.01" y2="16"/>
                </svg>
                <h2>Conferma Eliminazione Utente</h2>
            </div>
            <p class="modal-message">
                Sei sicuro di voler eliminare completamente l'utente<br/>
                <strong>@userToDelete.Email</strong> (@(userToDelete.DisplayName ?? "Nome non disponibile"))?<br/>
                <br/>
                <span class="warning-text">Questa azione eliminer&agrave;:</span><br/>
                &bull; La registrazione utente<br/>
                &bull; Tutti i ruoli assegnati<br/>
                &bull; Lo storico degli accessi<br/>
                <br/>
                <strong class="danger-text">Questa azione non pu&ograve; essere annullata!</strong>
            </p>
            <div class="modal-actions">
                <button class="btn btn-cancel-modal" @onclick="HideDeleteConfirmation" disabled="@isDeleting">
                    Annulla
                </button>
                <button class="btn btn-confirm-delete" @onclick="ConfirmDeleteUser" disabled="@isDeleting">
                    @if (isDeleting)
                    {
                        <span class="btn-spinner"></span>
                        <span>Eliminazione...</span>
                    }
                    else
                    {
                        <span>Elimina Definitivamente</span>
                    }
                </button>
            </div>
        </div>
    </div>
}

@code {
    private List<UserWithRolesDto> users = [];
    private List<UserWithRolesDto> filteredUsers = [];
    private List<RoleInfo> availableRoles = [];
    private UserWithRolesDto? selectedUser;
    private UserWithRolesDto? userToDelete;
    private string searchTerm = "";
    private string selectedRole = "";
    private bool loading = true;
    private bool initialized;
    private bool isAuthorized;
    private bool isDeleting;
    private string? errorMessage;
    private string? statusMessage;
    private bool isError;

    protected override async Task OnInitializedAsync()
    {
        await CheckAuthorizationAsync();
        
        if (isAuthorized)
        {
            LoadAvailableRoles();
            await LoadUsers();
        }
        
        initialized = true;
    }

    private async Task CheckAuthorizationAsync()
    {
        var user = await AuthStateProvider.GetCurrentUserAsync(forceRefresh: true);
        isAuthorized = user?.Roles?.Any(r => r.Equals("canAdmin", StringComparison.OrdinalIgnoreCase)) == true;
    }

    private async Task LoadUsers()
    {
        try
        {
            loading = true;
            errorMessage = null;
            
            var registrations = await UserRegistrationRepository.GetAllAsync();
            
            users.Clear();
            foreach (var reg in registrations)
            {
                var userRole = await UserRolesRepository.GetByUserIdentifierAsync(reg.Email);
                users.Add(new UserWithRolesDto(
                    reg.Email,
                    reg.DisplayName,
                    reg.Provider,
                    userRole?.Roles.ToArray() ?? [],
                    reg.FirstLoginAt,
                    reg.LastLoginAt,
                    reg.LoginCount));
            }
            
            FilterUsers();
        }
        catch (Exception ex)
        {
            errorMessage = $"Errore nel caricamento degli utenti: {ex.Message}";
        }
        finally
        {
            loading = false;
        }
    }

    private void LoadAvailableRoles()
    {
        availableRoles =
        [
            new RoleInfo("canAdmin", "Amministratore", "Può gestire i ruoli utente e le impostazioni di sistema"),
            new RoleInfo("canLogin", "Accesso", "Può accedere all'applicazione")
        ];
    }

    private void FilterUsers()
    {
        if (string.IsNullOrWhiteSpace(searchTerm))
        {
            filteredUsers = users.ToList();
        }
        else
        {
            var term = searchTerm.ToLowerInvariant();
            filteredUsers = users
                .Where(u => u.Email.Contains(term, StringComparison.OrdinalIgnoreCase) ||
                           (u.DisplayName?.Contains(term, StringComparison.OrdinalIgnoreCase) ?? false))
                .ToList();
        }
    }

    private void SelectUser(UserWithRolesDto user)
    {
        selectedUser = selectedUser?.Email == user.Email ? null : user;
        selectedRole = "";
    }

    private async Task AddRole(string email)
    {
        if (string.IsNullOrEmpty(selectedRole))
        {
            return;
        }

        try
        {
            var userRole = await UserRolesRepository.GetByUserIdentifierAsync(email);
            
            if (userRole == null)
            {
                userRole = new UserRole
                {
                    UserIdentifier = email,
                    IdentifierType = "email",
                    Roles = [selectedRole]
                };
            }
            else if (!userRole.Roles.Contains(selectedRole))
            {
                userRole.Roles.Add(selectedRole);
            }
            
            await UserRolesRepository.UpsertAsync(userRole);
            
            ShowStatus($"Ruolo '{selectedRole}' aggiunto a {email}", false);
            selectedRole = "";
            await LoadUsers();
        }
        catch (Exception ex)
        {
            ShowStatus($"Errore: {ex.Message}", true);
        }
    }

    private async Task RemoveRole(string email, string role)
    {
        try
        {
            var userRole = await UserRolesRepository.GetByUserIdentifierAsync(email);
            
            if (userRole != null && userRole.Roles.Contains(role))
            {
                userRole.Roles.Remove(role);
                await UserRolesRepository.UpsertAsync(userRole);
                
                ShowStatus($"Ruolo '{role}' rimosso da {email}", false);
                await LoadUsers();
            }
        }
        catch (Exception ex)
        {
            ShowStatus($"Errore: {ex.Message}", true);
        }
    }

    private void ShowStatus(string message, bool error)
    {
        statusMessage = message;
        isError = error;

        _ = Task.Run(async () =>
        {
            await Task.Delay(3000);
            await InvokeAsync(() =>
            {
                if (statusMessage == message)
                {
                    statusMessage = null;
                    StateHasChanged();
                }
            });
        });
    }

    private void ShowDeleteConfirmation(UserWithRolesDto user)
    {
        userToDelete = user;
    }

    private void HideDeleteConfirmation()
    {
        userToDelete = null;
    }

    private async Task ConfirmDeleteUser()
    {
        if (userToDelete == null) return;

        isDeleting = true;
        
        try
        {
            // Elimina i ruoli dell'utente
            await UserRolesRepository.DeleteAsync(userToDelete.Email);
            
            // Elimina la registrazione utente
            await UserRegistrationRepository.DeleteAsync(userToDelete.Email);
            
            ShowStatus($"Utente {userToDelete.Email} eliminato definitivamente", false);
            HideDeleteConfirmation();
            selectedUser = null;
            await LoadUsers();
        }
        catch (Exception ex)
        {
            ShowStatus($"Errore durante l'eliminazione: {ex.Message}", true);
        }
        finally
        {
            isDeleting = false;
        }
    }

    private record UserWithRolesDto(
        string Email,
        string? DisplayName,
        string? Provider,
        string[] Roles,
        DateTimeOffset FirstLoginAt,
        DateTimeOffset LastLoginAt,
        int LoginCount);

    private record RoleInfo(string Name, string DisplayName, string Description);
}
