@page "/admin/roles"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Components.Authorization
@using System.Net.Http.Json
@using GarageUnderground.Authentication.Client
@using System.Security.Claims
@inject HttpClient Http
@inject NavigationManager Navigation
@inject ApiAuthenticationStateProvider AuthStateProvider
@inject AuthenticationStateProvider AuthStateProviderBase

<PageTitle>Gestione Ruoli - GarageUnderground</PageTitle>

@if (!initialized)
{
    <div class="admin-container">
        <div class="loading">
            <span class="loading-spinner"></span>
            <span>Verifica autorizzazioni...</span>
        </div>
    </div>
}
else if (!isAuthorized)
{
    <div class="admin-container">
        <div class="access-denied">
            <h2>Accesso Negato</h2>
            <p>Non hai i permessi per accedere a questa pagina. È richiesto il ruolo <strong>canAdmin</strong>.</p>
            <a href="/dashboard" class="btn-back">Torna alla Dashboard</a>
        </div>
    </div>
}
else
{
    <div class="admin-container">
        <header class="admin-header">
            <h1>Gestione Ruoli Utenti</h1>
            <p class="admin-description">Assegna o rimuovi ruoli agli utenti registrati</p>
        </header>

        @if (loading)
        {
            <div class="loading">
                <span class="loading-spinner"></span>
                <span>Caricamento utenti...</span>
            </div>
        }
        else if (errorMessage != null)
        {
            <div class="error-message">
                <span>@errorMessage</span>
                <button @onclick="LoadUsers">Riprova</button>
            </div>
        }
        else
        {
            <div class="users-section">
                <div class="search-box">
                    <input type="text" 
                           placeholder="Cerca per email o nome..." 
                           @bind="searchTerm" 
                           @bind:event="oninput"
                           @onkeyup="FilterUsers" />
                </div>

                <div class="users-list">
                    @if (filteredUsers.Count == 0)
                    {
                        <div class="empty-state">
                            <p>Nessun utente trovato</p>
                        </div>
                    }
                    else
                    {
                        @foreach (var user in filteredUsers)
                        {
                            <div class="user-card @(selectedUser?.Email == user.Email ? "selected" : "")">
                                <div class="user-info" @onclick="() => SelectUser(user)">
                                    <div class="user-main">
                                        <span class="user-name">@(user.DisplayName ?? "Nome non disponibile")</span>
                                        <span class="user-email">@user.Email</span>
                                    </div>
                                    <div class="user-meta">
                                        <span class="user-provider">@user.Provider</span>
                                        <span class="user-logins" title="Numero di accessi">@user.LoginCount accessi</span>
                                    </div>
                                </div>
                                <div class="user-roles">
                                    @if (user.Roles.Length == 0)
                                    {
                                        <span class="no-roles">Nessun ruolo</span>
                                    }
                                    else
                                    {
                                        @foreach (var role in user.Roles)
                                        {
                                            <span class="role-tag">
                                                @role
                                                <button class="remove-role" 
                                                        @onclick="() => RemoveRole(user.Email, role)"
                                                        @onclick:stopPropagation="true"
                                                        title="Rimuovi ruolo">×</button>
                                            </span>
                                        }
                                    }
                                </div>
                                
                                @if (selectedUser?.Email == user.Email)
                                {
                                    <div class="add-role-section">
                                        <select @bind="selectedRole">
                                            <option value="">-- Seleziona ruolo --</option>
                                            @foreach (var role in availableRoles.Where(r => !user.Roles.Contains(r.Name)))
                                            {
                                                <option value="@role.Name">@role.DisplayName</option>
                                            }
                                        </select>
                                        <button class="btn-add-role" 
                                                @onclick="() => AddRole(user.Email)"
                                                disabled="@string.IsNullOrEmpty(selectedRole)">
                                            Aggiungi Ruolo
                                        </button>
                                    </div>
                                }
                            </div>
                        }
                    }
                </div>
            </div>

            @if (availableRoles.Count > 0)
            {
                <div class="roles-legend">
                    <h3>Ruoli Disponibili</h3>
                    <div class="roles-list">
                        @foreach (var role in availableRoles)
                        {
                            <div class="role-info">
                                <span class="role-name">@role.Name</span>
                                <span class="role-display">@role.DisplayName</span>
                                <span class="role-description">@role.Description</span>
                            </div>
                        }
                    </div>
                </div>
            }
        }

        @if (statusMessage != null)
        {
            <div class="status-message @(isError ? "error" : "success")">
                @statusMessage
            </div>
        }
    </div>
}

@code {
    private List<UserWithRoles> users = [];
    private List<UserWithRoles> filteredUsers = [];
    private List<RoleInfo> availableRoles = [];
    private UserWithRoles? selectedUser;
    private string searchTerm = "";
    private string selectedRole = "";
    private bool loading = true;
    private bool initialized;
    private bool isAuthorized;
    private string? errorMessage;
    private string? statusMessage;
    private bool isError;

    protected override async Task OnInitializedAsync()
    {
        await CheckAuthorizationAsync();
    }

    private async Task CheckAuthorizationAsync()
    {
        try
        {
            // Usa AuthenticationStateProvider standard per avere accesso ai claims del server
            var authState = await AuthStateProviderBase.GetAuthenticationStateAsync();
            var user = authState.User;
            
            Console.WriteLine($"[AdminRoles] User authenticated: {user.Identity?.IsAuthenticated}");
            Console.WriteLine($"[AdminRoles] User identity name: {user.Identity?.Name}");
            
            // Log tutti i ruoli
            var roles = user.Claims.Where(c => c.Type == ClaimTypes.Role).Select(c => c.Value).ToArray();
            Console.WriteLine($"[AdminRoles] User roles: {string.Join(", ", roles)}");
            
            // Verifica se l'utente ha il ruolo canAdmin
            isAuthorized = user.IsInRole("canAdmin");
            Console.WriteLine($"[AdminRoles] Is authorized (canAdmin): {isAuthorized}");
            
            if (isAuthorized)
            {
                await LoadUsers();
                await LoadAvailableRoles();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[AdminRoles] Error: {ex.Message}");
            errorMessage = $"Errore durante la verifica delle autorizzazioni: {ex.Message}";
            isAuthorized = false;
        }
        finally
        {
            initialized = true;
        }
    }

    private async Task LoadUsers()
    {
        try
        {
            loading = true;
            errorMessage = null;
            users = await Http.GetFromJsonAsync<List<UserWithRoles>>("/api/admin/roles/users") ?? [];
            FilterUsers();
        }
        catch (HttpRequestException ex) when (ex.StatusCode == System.Net.HttpStatusCode.Forbidden)
        {
            errorMessage = "Non hai i permessi per accedere ai dati.";
            isAuthorized = false;
        }
        catch (HttpRequestException ex) when (ex.StatusCode == System.Net.HttpStatusCode.Unauthorized)
        {
            errorMessage = "Sessione scaduta. Effettua nuovamente il login.";
            isAuthorized = false;
        }
        catch (Exception ex)
        {
            errorMessage = $"Errore nel caricamento degli utenti: {ex.Message}";
        }
        finally
        {
            loading = false;
        }
    }

    private async Task LoadAvailableRoles()
    {
        try
        {
            availableRoles = await Http.GetFromJsonAsync<List<RoleInfo>>("/api/admin/roles/available") ?? [];
        }
        catch
        {
            // Non-critical, use defaults
            availableRoles =
            [
                new RoleInfo("canAdmin", "Amministratore", "Può gestire i ruoli utente e le impostazioni di sistema"),
                new RoleInfo("canLogin", "Accesso", "Può accedere all'applicazione")
            ];
        }
    }

    private void FilterUsers()
    {
        if (string.IsNullOrWhiteSpace(searchTerm))
        {
            filteredUsers = users.ToList();
        }
        else
        {
            var term = searchTerm.ToLowerInvariant();
            filteredUsers = users
                .Where(u => u.Email.Contains(term, StringComparison.OrdinalIgnoreCase) ||
                           (u.DisplayName?.Contains(term, StringComparison.OrdinalIgnoreCase) ?? false))
                .ToList();
        }
    }

    private void SelectUser(UserWithRoles user)
    {
        selectedUser = selectedUser?.Email == user.Email ? null : user;
        selectedRole = "";
    }

    private async Task AddRole(string email)
    {
        if (string.IsNullOrEmpty(selectedRole))
        {
            return;
        }

        try
        {
            var response = await Http.PostAsJsonAsync($"/api/admin/roles/users/{Uri.EscapeDataString(email)}/roles", 
                new { Role = selectedRole });

            if (response.IsSuccessStatusCode)
            {
                ShowStatus($"Ruolo '{selectedRole}' aggiunto a {email}", false);
                selectedRole = "";
                await LoadUsers();
            }
            else
            {
                ShowStatus($"Errore nell'aggiunta del ruolo", true);
            }
        }
        catch (Exception ex)
        {
            ShowStatus($"Errore: {ex.Message}", true);
        }
    }

    private async Task RemoveRole(string email, string role)
    {
        try
        {
            var response = await Http.DeleteAsync(
                $"/api/admin/roles/users/{Uri.EscapeDataString(email)}/roles/{Uri.EscapeDataString(role)}");

            if (response.IsSuccessStatusCode)
            {
                ShowStatus($"Ruolo '{role}' rimosso da {email}", false);
                await LoadUsers();
            }
            else
            {
                ShowStatus($"Errore nella rimozione del ruolo", true);
            }
        }
        catch (Exception ex)
        {
            ShowStatus($"Errore: {ex.Message}", true);
        }
    }

    private void ShowStatus(string message, bool error)
    {
        statusMessage = message;
        isError = error;
        
        // Auto-hide after 3 seconds
        _ = Task.Run(async () =>
        {
            await Task.Delay(3000);
            await InvokeAsync(() =>
            {
                if (statusMessage == message)
                {
                    statusMessage = null;
                    StateHasChanged();
                }
            });
        });
    }

    private record UserWithRoles(
        string Email,
        string? DisplayName,
        string? Provider,
        string[] Roles,
        DateTimeOffset FirstLoginAt,
        DateTimeOffset LastLoginAt,
        int LoginCount);

    private record RoleInfo(string Name, string DisplayName, string Description);
}
