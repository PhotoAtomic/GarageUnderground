@page "/intervento/nuovo"
@page "/intervento/modifica/{Id:guid}"
@using GarageUnderground.Authentication.Client
@using GarageUnderground.Models
@using GarageUnderground.Services.Client
@using Microsoft.AspNetCore.Components.Authorization
@inject ApiAuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject IInterventiService InterventiService
@rendermode InteractiveServer

<PageTitle>@(IsEditMode ? "Modifica" : "Nuovo") Intervento - GarageUnderground</PageTitle>

@if (isLoading)
{
    <div class="loading-container">
        <div class="loading-spinner"></div>
    </div>
}
else if (user?.IsAuthenticated == true)
{
    <section class="nuovo-intervento-page">
        <header class="page-header">
            <button class="btn btn-back" @onclick="NavigateBack">
                <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M19 12H5"/>
                    <polyline points="12 19 5 12 12 5"/>
                </svg>
                <span>Indietro</span>
            </button>
            <h1>@(IsEditMode ? "Modifica" : "Nuovo") Intervento</h1>
        </header>

        <div class="form-container">
            <!-- Row 1: Targa + Data -->
            <div class="header-info">
                <div class="info-row targa-row">
                    <label>Targa</label>
                    <span class="targa-display">@targa</span>
                </div>
                <div class="info-row date-row">
                    <label>Data</label>
                    <div class="date-input-wrapper">
                        <input type="date" 
                               id="dataIntervento"
                               class="form-input date-input"
                               @bind="dataIntervento" />
                        <svg class="calendar-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" onclick="document.getElementById('dataIntervento').showPicker()">
                            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                            <line x1="16" y1="2" x2="16" y2="6"/>
                            <line x1="8" y1="2" x2="8" y2="6"/>
                            <line x1="3" y1="10" x2="21" y2="10"/>
                        </svg>
                    </div>
                </div>
            </div>

            <!-- Row 2: Descrizione -->
            <div class="form-group">
                <label for="descrizione">Descrizione Intervento</label>
                <textarea id="descrizione" 
                          class="form-input textarea-input"
                          placeholder="Descrivi l'intervento eseguito..."
                          @bind="descrizione"
                          rows="4"></textarea>
            </div>

            <!-- Row 3: Costo + Pagato -->
            <div class="costo-pagato-row">
                <div class="form-group costo-group">
                    <label for="costo">Costo (€)</label>
                    <input type="number" 
                           id="costo"
                           class="form-input"
                           placeholder="0.00"
                           step="0.01"
                           min="0"
                           @bind="costo" />
                </div>

                <div class="form-group checkbox-group">
                    <label class="checkbox-label" @onclick="TogglePagato">
                        <span class="checkbox-box @(pagato ? "checked" : "")">
                            @if (pagato)
                            {
                                <svg class="checkmark-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
                                    <polyline points="20 6 9 17 4 12"/>
                                </svg>
                            }
                        </span>
                        <span class="checkbox-text">Pagato</span>
                    </label>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="error-message">
                    @errorMessage
                </div>
            }

            <!-- Buttons: Salva (full width), then Annulla + Elimina -->
            <div class="form-actions">
                <button class="btn btn-save" @onclick="SaveIntervento" disabled="@(isSaving || isDeleting)">
                    @if (isSaving)
                    {
                        <span class="btn-spinner"></span>
                        <span>Salvataggio...</span>
                    }
                    else
                    {
                        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"/>
                            <polyline points="17 21 17 13 7 13 7 21"/>
                            <polyline points="7 3 7 8 15 8"/>
                        </svg>
                        <span>@(IsEditMode ? "Salva Modifiche" : "Salva Intervento")</span>
                    }
                </button>
                
                <div class="secondary-actions">
                    <button class="btn btn-cancel" @onclick="NavigateBack" disabled="@(isSaving || isDeleting)">
                        Annulla
                    </button>
                    @if (IsEditMode)
                    {
                        <button class="btn btn-delete" @onclick="ShowDeleteConfirmation" disabled="@(isSaving || isDeleting)">
                            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="3 6 5 6 21 6"/>
                                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                                <line x1="10" y1="11" x2="10" y2="17"/>
                                <line x1="14" y1="11" x2="14" y2="17"/>
                            </svg>
                            <span>Elimina</span>
                        </button>
                    }
                </div>
            </div>
        </div>
    </section>

    @if (showDeleteConfirmation)
    {
        <div class="modal-overlay" @onclick="HideDeleteConfirmation">
            <div class="modal-content" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <svg class="modal-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"/>
                        <line x1="12" y1="8" x2="12" y2="12"/>
                        <line x1="12" y1="16" x2="12.01" y2="16"/>
                    </svg>
                    <h2>Conferma Eliminazione</h2>
                </div>
                <p class="modal-message">
                    Sei sicuro di voler eliminare questo intervento?<br/>
                    <strong>Questa azione non può essere annullata.</strong>
                </p>
                <div class="modal-actions">
                    <button class="btn btn-cancel-modal" @onclick="HideDeleteConfirmation" disabled="@isDeleting">
                        Annulla
                    </button>
                    <button class="btn btn-confirm-delete" @onclick="DeleteIntervento" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="btn-spinner"></span>
                            <span>Eliminazione...</span>
                        }
                        else
                        {
                            <span>Elimina Intervento</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    }
}

@code {
    [Parameter]
    public Guid? Id { get; set; }

    [SupplyParameterFromQuery]
    public string? Targa { get; set; }

    private bool IsEditMode => Id.HasValue;

    private UserInfo? user;
    private bool isLoading = true;
    private bool isSaving = false;
    private bool isDeleting = false;
    private bool showDeleteConfirmation = false;
    private string targa = string.Empty;
    private DateTime dataIntervento = DateTime.Today;
    private string descrizione = string.Empty;
    private decimal costo = 0;
    private bool pagato = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        user = await AuthStateProvider.GetCurrentUserAsync(forceRefresh: true);

        if (user?.IsAuthenticated != true)
        {
            Navigation.NavigateTo("/");
            return;
        }

        if (IsEditMode)
        {
            await LoadInterventoAsync();
        }
        else
        {
            targa = (Targa ?? string.Empty).Trim().ToUpperInvariant();
            
            if (string.IsNullOrEmpty(targa))
            {
                Navigation.NavigateTo("/dashboard");
                return;
            }
        }

        isLoading = false;
    }

    private async Task LoadInterventoAsync()
    {
        var intervento = await InterventiService.GetByIdAsync(Id!.Value);
        
        if (intervento is null)
        {
            Navigation.NavigateTo("/dashboard");
            return;
        }

        targa = intervento.Targa;
        dataIntervento = intervento.Data.ToDateTime(TimeOnly.MinValue);
        descrizione = intervento.Descrizione;
        costo = intervento.Costo;
        pagato = intervento.Pagato;
    }

    private void TogglePagato()
    {
        pagato = !pagato;
    }

    private async Task SaveIntervento()
    {
        errorMessage = null;

        if (string.IsNullOrWhiteSpace(descrizione))
        {
            errorMessage = "La descrizione è obbligatoria";
            return;
        }

        if (costo < 0)
        {
            errorMessage = "Il costo non può essere negativo";
            return;
        }

        isSaving = true;

        try
        {
            var interventoDto = new NuovoInterventoDto
            {
                Targa = targa,
                Data = DateOnly.FromDateTime(dataIntervento),
                Descrizione = descrizione.Trim(),
                Costo = costo,
                Pagato = pagato
            };

            InterventoDto? result;
            
            if (IsEditMode)
            {
                result = await InterventiService.UpdateAsync(Id!.Value, interventoDto);
            }
            else
            {
                result = await InterventiService.CreateAsync(interventoDto);
            }

            if (result is not null)
            {
                Navigation.NavigateTo($"/dashboard?targa={Uri.EscapeDataString(targa)}");
            }
            else
            {
                errorMessage = "Errore durante il salvataggio. Riprova.";
            }
        }
        catch (Exception)
        {
            errorMessage = "Errore durante il salvataggio. Riprova.";
        }
        finally
        {
            isSaving = false;
        }
    }

    private void ShowDeleteConfirmation()
    {
        showDeleteConfirmation = true;
    }

    private void HideDeleteConfirmation()
    {
        showDeleteConfirmation = false;
    }

    private async Task DeleteIntervento()
    {
        isDeleting = true;
        errorMessage = null;

        try
        {
            var success = await InterventiService.DeleteAsync(Id!.Value);

            if (success)
            {
                Navigation.NavigateTo($"/dashboard?targa={Uri.EscapeDataString(targa)}");
            }
            else
            {
                showDeleteConfirmation = false;
                errorMessage = "Errore durante l'eliminazione. Riprova.";
            }
        }
        catch (Exception)
        {
            showDeleteConfirmation = false;
            errorMessage = "Errore durante l'eliminazione. Riprova.";
        }
        finally
        {
            isDeleting = false;
        }
    }

    private void NavigateBack()
    {
        Navigation.NavigateTo($"/dashboard?targa={Uri.EscapeDataString(targa)}");
    }
}

<style>
    .loading-container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 50vh;
    }

    .loading-spinner {
        width: 2.5rem;
        height: 2.5rem;
        border: 3px solid var(--color-surface);
        border-top-color: var(--color-accent);
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    .btn-spinner {
        width: 1.5rem;
        height: 1.5rem;
        border: 2px solid transparent;
        border-top-color: currentColor;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        to { transform: rotate(360deg); }
    }

    .nuovo-intervento-page {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        @* padding: 1rem; *@
        max-width: 800px;
        margin: 0 auto;
    }

    .page-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .page-header h1 {
        font-size: clamp(1.5rem, 4vw, 2rem);
        font-weight: 600;
        color: var(--color-text);
        margin: 0;
    }

    .btn-back {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 1rem 1.5rem;
        font-size: 1.1rem;
        font-weight: 500;
        background-color: var(--color-surface);
        color: var(--color-text);
        border: 2px solid var(--color-primary);
        border-radius: 0.75rem;
        cursor: pointer;
        transition: background-color 0.2s, transform 0.1s;
        min-height: 56px;
    }

    .btn-back:hover {
        background-color: var(--color-primary);
    }

    .btn-back:active {
        transform: scale(0.98);
    }

    .form-container {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        background-color: var(--color-surface);
        padding: 1rem;
        border-radius: 1rem;
    }

    /* Header info: Targa + Data on same row */
    .header-info {
        display: flex;
        flex-wrap: wrap;
        gap: 1.5rem;
        padding-bottom: 1.5rem;
        border-bottom: 2px solid var(--color-primary);
        align-items: flex-end;
    }

    .info-row {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .targa-row {
        flex: 1;
        min-width: 150px;
    }

    .date-row {
        flex: 1;
        min-width: 180px;
    }

    .info-row label {
        font-size: 1rem;
        font-weight: 500;
        color: var(--color-text-muted);
    }

    .targa-display {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--color-accent);
        padding: 0.75rem 1.25rem;
        background-color: var(--color-bg);
        border-radius: 0.5rem;
        letter-spacing: 0.1em;
        min-height: 60px;
        display: flex;
        align-items: center;
    }

    .date-input-wrapper {
        position: relative;
        display: flex;
        align-items: center;
    }

    .date-input {
        padding: 1rem 3.5rem 1rem 1.25rem;
        font-size: 1.25rem;
        border: 2px solid var(--color-primary);
        border-radius: 0.75rem;
        background-color: var(--color-bg);
        color: var(--color-text);
        min-height: 60px;
        color-scheme: dark;
        width: 100%;
    }

    .date-input::-webkit-calendar-picker-indicator {
        opacity: 0;
        position: absolute;
        right: 0;
        width: 3rem;
        height: 100%;
        cursor: pointer;
    }

    .calendar-icon {
        position: absolute;
        right: 1rem;
        width: 1.75rem;
        height: 1.75rem;
        stroke: var(--color-text);
        pointer-events: none;
    }

    .date-input:focus {
        outline: none;
        border-color: var(--color-accent);
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .form-group label {
        font-size: 1.1rem;
        font-weight: 500;
        color: var(--color-text);
    }

    .form-input {
        padding: 1.25rem 1.5rem;
        font-size: 1.25rem;
        border: 2px solid var(--color-primary);
        border-radius: 0.75rem;
        background-color: var(--color-bg);
        color: var(--color-text);
        font-family: inherit;
    }

    .form-input::placeholder {
        color: var(--color-text-muted);
    }

    .form-input:focus {
        outline: none;
        border-color: var(--color-accent);
    }

    .textarea-input {
        resize: vertical;
        min-height: 150px;
        line-height: 1.5;
    }

    /* Costo + Pagato on same row */
    .costo-pagato-row {
        display: flex;
        flex-wrap: wrap;
        gap: 1.5rem;
        align-items: flex-end;
    }

    .costo-group {
        flex: 1;
        min-width: 150px;
    }

    .checkbox-group {
        flex: 0 0 auto;
    }

    .checkbox-label {
        display: flex;
        align-items: center;
        gap: 1rem;
        cursor: pointer;
        padding: 1rem;
        border-radius: 0.75rem;
        transition: background-color 0.2s;
        background-color: var(--color-bg);
        border: 2px solid var(--color-primary);
        min-height: 60px;
    }

    .checkbox-label:hover {
        border-color: var(--color-accent);
    }

    .checkbox-box {
        width: 2.5rem;
        height: 2.5rem;
        border: 3px solid var(--color-primary);
        border-radius: 0.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: background-color 0.2s, border-color 0.2s;
        flex-shrink: 0;
    }

    .checkbox-box.checked {
        background-color: #26b050;
        border-color: #26b050;
    }

    .checkmark-icon {
        width: 1.25rem;
        height: 1.25rem;
        stroke: white;
    }

    .checkbox-text {
        font-size: 1.25rem;
        font-weight: 500;
        color: var(--color-text);
    }

    .error-message {
        padding: 1rem 1.5rem;
        background-color: rgba(233, 69, 96, 0.2);
        border: 2px solid var(--color-accent);
        border-radius: 0.75rem;
        color: var(--color-accent);
        font-size: 1.1rem;
        font-weight: 500;
    }

    /* Form actions layout */
    .form-actions {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-top: 1rem;
    }

    .secondary-actions {
        display: flex;
        gap: 1rem;
    }

    .btn {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 1.25rem 1rem;
        font-size: 1.25rem;
        font-weight: 600;
        border: none;
        border-radius: 0.75rem;
        cursor: pointer;
        transition: background-color 0.2s, transform 0.1s;
        min-height: 64px;
    }

    .btn:active:not(:disabled) {
        transform: scale(0.98);
    }

    .btn:disabled {
        opacity: 0.7;
        cursor: not-allowed;
    }

    .btn-save {
        background-color: #26b050;
        color: white;
        width: 100%;
    }

    .btn-save:hover:not(:disabled) {
        background-color: #1e9040;
    }

    .btn-cancel {
        background-color: var(--color-bg);
        color: var(--color-text);
        border: 2px solid var(--color-primary);
        flex: 1;
    }

    .btn-cancel:hover:not(:disabled) {
        background-color: var(--color-primary);
    }

    .btn-delete {
        background-color: transparent;
        color: var(--color-accent);
        border: 2px solid var(--color-accent);
        flex: 1;
    }

    .btn-delete:hover:not(:disabled) {
        background-color: var(--color-accent);
        color: white;
    }

    .icon {
        width: 1.5rem;
        height: 1.5rem;
        flex-shrink: 0;
    }

    /* Desktop: buttons side by side */
    @@media (min-width: 600px) {
        .form-actions {
            flex-direction: row;
            flex-wrap: wrap;
        }

        .btn-save {
            flex: 1;
            min-width: 200px;
        }

        .secondary-actions {
            flex: 1;
            min-width: 200px;
        }
    }

    /* Modal Styles */
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.7);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1rem;
        z-index: 1000;
        animation: fadeIn 0.2s ease-out;
    }

    @@keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    .modal-content {
        background-color: var(--color-surface);
        border-radius: 1rem;
        padding: 2rem;
        max-width: 500px;
        width: 100%;
        animation: slideUp 0.2s ease-out;
    }

    @@keyframes slideUp {
        from { 
            opacity: 0;
            transform: translateY(20px);
        }
        to { 
            opacity: 1;
            transform: translateY(0);
        }
    }

    .modal-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .modal-icon {
        width: 3rem;
        height: 3rem;
        stroke: var(--color-accent);
        flex-shrink: 0;
    }

    .modal-header h2 {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--color-text);
        margin: 0;
    }

    .modal-message {
        font-size: 1.1rem;
        color: var(--color-text);
        line-height: 1.6;
        margin: 0 0 2rem;
    }

    .modal-message strong {
        color: var(--color-accent);
    }

    .modal-actions {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .btn-cancel-modal {
        background-color: var(--color-bg);
        color: var(--color-text);
        border: 2px solid var(--color-primary);
        flex: 1;
    }

    .btn-cancel-modal:hover:not(:disabled) {
        background-color: var(--color-primary);
    }

    .btn-confirm-delete {
        background-color: var(--color-accent);
        color: white;
        flex: 1;
    }

    .btn-confirm-delete:hover:not(:disabled) {
        background-color: #d13550;
    }
</style>
