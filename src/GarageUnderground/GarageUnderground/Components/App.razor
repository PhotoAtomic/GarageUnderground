@inject IHttpContextAccessor HttpContextAccessor
@inject IConfiguration Configuration

@{
    // Check for override first, then fall back to automatic detection
    var baseUrlOverride = Configuration["BaseUrlOverride"];
    string baseUrl;
    
    if (!string.IsNullOrWhiteSpace(baseUrlOverride))
    {
        // Use configured override (remove trailing slash if present)
        baseUrl = baseUrlOverride.TrimEnd('/');
    }
    else
    {
        // Automatic detection from HttpContext
        var request = HttpContextAccessor.HttpContext?.Request;
        baseUrl = request != null 
            ? $"{request.Scheme}://{request.Host}" 
            : "";
    }
}

