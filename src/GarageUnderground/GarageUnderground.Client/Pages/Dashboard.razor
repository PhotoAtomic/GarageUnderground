@page "/dashboard"
@using GarageUnderground.Client.Authentication
@using GarageUnderground.Client.Models
@using GarageUnderground.Client.Services
@using Microsoft.AspNetCore.Components.Authorization
@inject ApiAuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject IInterventiService InterventiService
@rendermode InteractiveWebAssembly

<PageTitle>Dashboard - GarageUnderground</PageTitle>

@if (isLoading)
{
    <div class="loading-container">
        <div class="loading-spinner"></div>
    </div>
}
else if (user?.IsAuthenticated == true)
{
    <section class="dashboard">
        <header class="dashboard-header">
            <h1>Benvenuto, @user.Name!</h1>
            <p class="user-info">
                <span class="provider-badge">@user.Provider</span>
                @if (!string.IsNullOrEmpty(user.Email))
                {
                    <span class="email">@user.Email</span>
                }
            </p>
        </header>

        <div class="search-section">
            <div class="search-container">
                <input type="text" 
                       class="search-input" 
                       placeholder="Inserisci la targa del veicolo..."
                       @bind="searchTarga"
                       @bind:event="oninput"
                       @onkeydown="HandleSearchKeyDown" />
                <button class="btn btn-search" @onclick="SearchInterventi" disabled="@isSearching">
                    @if (isSearching)
                    {
                        <span class="btn-spinner"></span>
                    }
                    else
                    {
                        <span>?? Cerca</span>
                    }
                </button>
            </div>
        </div>

        @if (hasSearched)
        {
            <div class="interventi-section">
                <div class="nuovo-intervento-card" @onclick="NavigateToNuovoIntervento">
                    <span class="plus-icon">+</span>
                    <span class="nuovo-intervento-text">Nuovo Intervento</span>
                </div>

                @if (interventi.Count == 0)
                {
                    <div class="no-results">
                        <p>Nessun intervento trovato per la targa <strong>@currentTarga</strong></p>
                    </div>
                }
                else
                {
                    <div class="interventi-list">
                        @foreach (var intervento in interventi)
                        {
                            <div class="intervento-card @(intervento.Pagato ? "pagato" : "non-pagato")">
                                <div class="intervento-header">
                                    <span class="intervento-data">@intervento.Data.ToString("dd/MM/yyyy")</span>
                                    <span class="intervento-stato @(intervento.Pagato ? "stato-pagato" : "stato-non-pagato")">
                                        @(intervento.Pagato ? "? Pagato" : "? Da pagare")
                                    </span>
                                </div>
                                <p class="intervento-descrizione">@intervento.Descrizione</p>
                                <div class="intervento-footer">
                                    <span class="intervento-costo">€ @intervento.Costo.ToString("N2")</span>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        }

        <footer class="dashboard-footer">
            <button class="btn btn-logout" @onclick="HandleLogout">
                Logout
            </button>
        </footer>
    </section>
}

@code {
    private UserInfo? user;
    private bool isLoading = true;
    private bool isSearching = false;
    private bool hasSearched = false;
    private string searchTarga = string.Empty;
    private string currentTarga = string.Empty;
    private List<InterventoDto> interventi = [];

    protected override async Task OnInitializedAsync()
    {
        user = await AuthStateProvider.GetCurrentUserAsync(forceRefresh: true);

        if (user?.IsAuthenticated != true)
        {
            Navigation.NavigateTo("/");
            return;
        }

        isLoading = false;
    }

    private async Task HandleSearchKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await SearchInterventi();
        }
    }

    private async Task SearchInterventi()
    {
        if (string.IsNullOrWhiteSpace(searchTarga))
        {
            return;
        }

        isSearching = true;
        currentTarga = searchTarga.Trim().ToUpperInvariant();
        
        try
        {
            var results = await InterventiService.GetByTargaAsync(currentTarga);
            interventi = results.ToList();
            hasSearched = true;
        }
        finally
        {
            isSearching = false;
        }
    }

    private void NavigateToNuovoIntervento()
    {
        Navigation.NavigateTo($"/intervento/nuovo?targa={Uri.EscapeDataString(currentTarga)}");
    }

    private async Task HandleLogout()
    {
        isLoading = true;
        await AuthStateProvider.LogoutAsync();
        Navigation.NavigateTo("/");
    }
}

<style>
    .loading-container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 50vh;
    }

    .loading-spinner {
        width: 2.5rem;
        height: 2.5rem;
        border: 3px solid var(--color-surface);
        border-top-color: var(--color-accent);
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    .btn-spinner {
        width: 1.5rem;
        height: 1.5rem;
        border: 2px solid transparent;
        border-top-color: currentColor;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        to { transform: rotate(360deg); }
    }

    .dashboard {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        min-height: calc(100vh - var(--header-height) - 4rem);
        padding: 1rem;
    }

    .dashboard-header {
        text-align: center;
    }

    .dashboard-header h1 {
        font-size: clamp(1.5rem, 4vw, 2rem);
        font-weight: 600;
        margin: 0 0 0.5rem;
        color: var(--color-text);
    }

    .user-info {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 0.5rem;
        margin: 0;
        color: var(--color-text-muted);
        font-size: 0.9rem;
    }

    .provider-badge {
        background-color: var(--color-primary);
        color: var(--color-text);
        padding: 0.25rem 0.75rem;
        border-radius: 1rem;
        font-size: 0.8rem;
        text-transform: capitalize;
    }

    .email {
        color: var(--color-text-muted);
    }

    /* Search Section - Oversized for big hands */
    .search-section {
        padding: 1rem 0;
    }

    .search-container {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .search-input {
        flex: 1;
        min-width: 200px;
        padding: 1.25rem 1.5rem;
        font-size: 1.25rem;
        border: 2px solid var(--color-primary);
        border-radius: 0.75rem;
        background-color: var(--color-surface);
        color: var(--color-text);
        text-transform: uppercase;
    }

    .search-input::placeholder {
        text-transform: none;
        color: var(--color-text-muted);
    }

    .search-input:focus {
        outline: none;
        border-color: var(--color-accent);
    }

    .btn-search {
        padding: 1.25rem 2rem;
        font-size: 1.25rem;
        font-weight: 600;
        min-width: 140px;
        min-height: 64px;
        background-color: var(--color-accent);
        color: white;
        border: none;
        border-radius: 0.75rem;
        cursor: pointer;
        transition: background-color 0.2s, transform 0.1s;
    }

    .btn-search:hover:not(:disabled) {
        background-color: #d13550;
    }

    .btn-search:active:not(:disabled) {
        transform: scale(0.98);
    }

    .btn-search:disabled {
        opacity: 0.7;
        cursor: not-allowed;
    }

    /* Interventi Section */
    .interventi-section {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .nuovo-intervento-card {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        padding: 2rem;
        background-color: var(--color-surface);
        border: 3px dashed var(--color-accent);
        border-radius: 1rem;
        cursor: pointer;
        transition: background-color 0.2s, transform 0.1s;
        min-height: 100px;
    }

    .nuovo-intervento-card:hover {
        background-color: var(--color-primary);
    }

    .nuovo-intervento-card:active {
        transform: scale(0.98);
    }

    .plus-icon {
        font-size: 3rem;
        font-weight: 300;
        color: var(--color-accent);
        line-height: 1;
    }

    .nuovo-intervento-text {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--color-text);
    }

    .no-results {
        text-align: center;
        padding: 2rem;
        color: var(--color-text-muted);
    }

    .interventi-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .intervento-card {
        padding: 1.5rem;
        background-color: var(--color-surface);
        border-radius: 1rem;
        border-left: 5px solid;
    }

    .intervento-card.pagato {
        border-left-color: #26b050;
    }

    .intervento-card.non-pagato {
        border-left-color: var(--color-accent);
    }

    .intervento-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.75rem;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .intervento-data {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--color-text);
    }

    .intervento-stato {
        padding: 0.5rem 1rem;
        border-radius: 2rem;
        font-size: 0.95rem;
        font-weight: 500;
    }

    .stato-pagato {
        background-color: rgba(38, 176, 80, 0.2);
        color: #26b050;
    }

    .stato-non-pagato {
        background-color: rgba(233, 69, 96, 0.2);
        color: var(--color-accent);
    }

    .intervento-descrizione {
        font-size: 1.1rem;
        color: var(--color-text);
        margin: 0 0 1rem;
        line-height: 1.5;
    }

    .intervento-footer {
        display: flex;
        justify-content: flex-end;
    }

    .intervento-costo {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--color-text);
    }

    .dashboard-footer {
        display: flex;
        justify-content: center;
        padding: 1rem 0;
        margin-top: auto;
    }

    .btn {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 1rem 2rem;
        font-size: 1.1rem;
        font-weight: 500;
        border: none;
        border-radius: 0.75rem;
        cursor: pointer;
        transition: background-color 0.2s, transform 0.1s;
        min-height: 56px;
    }

    .btn:active {
        transform: scale(0.98);
    }

    .btn-logout {
        background-color: transparent;
        color: var(--color-accent);
        border: 2px solid var(--color-accent);
    }

    .btn-logout:hover {
        background-color: var(--color-accent);
        color: white;
    }
</style>
