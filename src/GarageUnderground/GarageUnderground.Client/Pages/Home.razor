    .loading-spinner {
        width: 2rem;
        height: 2rem;
        border: 3px solid var(--color-surface);
        border-top-color: var(--color-accent);
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        to { transform: rotate(360deg); }
    }
</style>
