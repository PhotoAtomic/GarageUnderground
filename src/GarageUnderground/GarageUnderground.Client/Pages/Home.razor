@page "/"
@using GarageUnderground.Client.Authentication
@using Microsoft.AspNetCore.Components.Authorization
@inject ApiAuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@rendermode InteractiveWebAssembly

<PageTitle>GarageUnderground</PageTitle>

<section class="hero">
    <h1>GarageUnderground</h1>
    <p>Your mobile-ready app is ready to go.</p>

    @if (isLoading)
    {
        <div class="loading-spinner"></div>
    }
    else if (providers != null)
    {
        <div class="login-section">
            @if (providers.IsMockAuthEnabled)
            {
                <div class="mock-login-form">
                    <input type="text"
                           @bind="mockDisplayName"
                           placeholder="Your name (optional)"
                           class="input-field" />
                    <button class="btn btn-primary" @onclick="HandleMockLogin">
                        <span class="btn-icon dev-icon"></span>
                        Quick Login
                    </button>
                </div>
            }
            else
            {
                <div class="provider-buttons">
                    @foreach (var provider in providers.Providers)
                    {
                        <button class="btn btn-provider @provider.IconClass"
                                @onclick="() => HandleProviderLogin(provider.Scheme)">
                            <span class="btn-icon @provider.IconClass"></span>
                            Sign in with @provider.DisplayName
                        </button>
                    }
                </div>
            }
        </div>
    }
</section>

@code {
    private ProvidersResponse? providers;
    private bool isLoading = true;
    private string? mockDisplayName;

    protected override async Task OnInitializedAsync()
    {
        // Check if user is already authenticated
        var user = await AuthStateProvider.GetCurrentUserAsync();
        if (user?.IsAuthenticated == true)
        {
            Navigation.NavigateTo("/dashboard");
            return;
        }

        // Load available providers
        providers = await AuthStateProvider.GetProvidersAsync();
        isLoading = false;
    }

    private async Task HandleMockLogin()
    {
        isLoading = true;
        var success = await AuthStateProvider.MockLoginAsync(mockDisplayName);
        if (success)
        {
            Navigation.NavigateTo("/dashboard");
        }
        else
        {
            isLoading = false;
        }
    }

    private void HandleProviderLogin(string scheme)
    {
        Navigation.NavigateTo($"/api/auth/login/{scheme}", forceLoad: true);
    }
}

<style>
    .hero {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        min-height: 70vh;
        gap: 1.5rem;
        padding: 1rem;
    }

    .hero h1 {
        font-size: clamp(1.75rem, 5vw, 2.5rem);
        font-weight: 700;
        margin: 0;
        color: var(--color-text);
    }

    .hero p {
        font-size: clamp(1rem, 3vw, 1.25rem);
        color: var(--color-text-muted);
        margin: 0;
        max-width: 30ch;
    }

    .login-section {
        margin-top: 2rem;
        width: 100%;
        max-width: 320px;
    }

    .mock-login-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .input-field {
        padding: 0.875rem 1rem;
        font-size: 1rem;
        border: 1px solid var(--color-primary);
        border-radius: 0.5rem;
        background-color: var(--color-surface);
        color: var(--color-text);
        outline: none;
        transition: border-color 0.2s;
    }

    .input-field:focus {
        border-color: var(--color-accent);
    }

    .input-field::placeholder {
        color: var(--color-text-muted);
    }

    .provider-buttons {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .btn {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        padding: 0.875rem 1.5rem;
        font-size: 1rem;
        font-weight: 500;
        border: none;
        border-radius: 0.5rem;
        cursor: pointer;
        transition: background-color 0.2s, transform 0.1s;
        min-height: 48px;
    }

    .btn:active {
        transform: scale(0.98);
    }

    .btn-primary {
        background-color: var(--color-accent);
        color: white;
    }

    .btn-primary:hover {
        background-color: #d63a52;
    }

    .btn-provider {
        background-color: var(--color-surface);
        color: var(--color-text);
        border: 1px solid var(--color-primary);
    }

    .btn-provider:hover {
        background-color: var(--color-primary);
    }

    .btn-provider.microsoft-icon {
        border-color: #00a4ef;
    }

    .btn-provider.google-icon {
        border-color: #ea4335;
    }

    .btn-icon {
        width: 1.25rem;
        height: 1.25rem;
