# GarageUnderground Docker Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# Network Configuration
# =============================================================================
# HTTP port to expose (default: 80)
HTTP_PORT=80

# HTTPS port to expose (default: 443)
HTTPS_PORT=443

# =============================================================================
# HTTPS Certificate (optional)
# =============================================================================
# To enable HTTPS:
# 1. Place your .pfx certificate in ./certs/ directory
# 2. Uncomment the Kestrel HTTPS settings in docker-compose.yaml
# 3. Set the certificate password below
CERTIFICATE_PASSWORD=

# =============================================================================
# Microsoft Entra ID Authentication (optional)
# =============================================================================
# Leave empty to use mock authentication (development mode)
# Register your app at https://portal.azure.com ? App Registrations
# Add redirect URI: https://your-domain.com/signin-microsoft
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=

# =============================================================================
# Google Authentication (optional)
# =============================================================================
# Create OAuth credentials at https://console.cloud.google.com
# Add redirect URI: https://your-domain.com/signin-google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
